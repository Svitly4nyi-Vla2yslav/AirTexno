{
  "trailingComma": "es5",
  "tabWidth": 2,
  "semi": true,
  "singleQuote": true,
  "jsxSingleQuote": true,
  "bracketSpacing": true,
  "jsxBracketSameLine": false,
  "arrowParens": "avoid",
  "printWidth": 100,
  "endOfLine": "auto",
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "options": {
        "parser": "typescript"
      }
    },
    {
      "files": ["*.styled.ts", "*.styled.tsx", "*.styles.ts", "*.styles.tsx"],
      "options": {
        "printWidth": 120,
        "bracketSameLine": true,
        "singleQuote": true,
        "jsxSingleQuote": true
      }
    }
  ]
}